<div class="container  mt-5">
  <div class="justify-content-center">
    <div class="col-md-10 col-12 mx-auto text-secondary">
      <form action="/restaurants" method="POST" class="flex-direction: column">


        <div class="form-group row">
          <label for="name" class="col-sm-4 card-title mb-1">餐廳名稱</label>
          <input type="text" placeholder="請輸入餐廳名稱" name="name" id="name" class="col-sm-8" required>
        </div>

        <div class="form-group row">
          <label for="name_en" class="col-sm-4 card-title mb-1">餐廳英文名稱</label>
          <input type="text" placeholder="請輸入餐廳英文名稱" name="name_en" id="name_en" class="col-sm-8" required>
        </div>

        <div class="form-group row">
          <label for="category" class="col-sm-4 card-title mb-1">餐廳類型</label>
          <input type="text" placeholder="餐廳類型: 中式/美式/日式/義式?" name="category" id="category" class="col-sm-8" required>
        </div>

        <div class="form-group row">
          <label for="image" class="col-sm-4 card-title mb-1">餐廳照片</label>
          <input type="url" placeholder="請填入餐廳圖片的網址" name="image" id="image" class="col-sm-8" required>
        </div>

        <div class="form-group row">
          <label for="location" class="col-sm-4 card-title mb-1">餐廳地址</label>
          <input type="text" placeholder="請填寫餐廳地址" name="location" id="location" class="col-sm-8" required>
        </div>

        <div class="form-group row">
          <label for="phone" class="col-sm-4 card-title mb-1">餐廳電話</label>
          <input type="tel" placeholder="格式範例: 02 123 4567 " pattern="[0-9]{2} [0-9]{3} [0-9]{4}" name="phone"
            id="phone" class="col-sm-8" required>
        </div>

        <div class="form-group row">
          <label for="google_map" class="col-sm-4 card-title mb-1">餐廳google map連結網址</label>
          <input type="url" placeholder="格式範例: https://g.page/sababapitabar?share" name="google_map" id="google_map"
            class="col-sm-8" required>
        </div>

        <div class="form-group row">
          <label for="rating" class="col-sm-4 card-title mb-1">餐廳評分</label>
          <input type="text" placeholder="請輸入0~5分" name="rating" id="rating" class="col-sm-8" required>
        </div>

        <div class="form-group row">
          <label for="description" class="col-sm-4 card-title mb-1">餐廳介紹</label>
          <textarea placeholder="請輸入餐廳簡介" name="description" id="description" class="col-sm-8" rows="3"></textarea>
        </div>

        <div class="row justify-content-end">
          <a href="/" class="badge badge-secondary font-weight-normal mr-3">
            Back
            <div>
              <i class="fas fa-backward"></i>
            </div>
          </a>
          <button type="submit" class="btn btn-major">Create</button>
        </div>

      </form>
    </div>
  </div>
</div>